# Docker Compose Environment Variables
# Copy this file to .env and fill in your actual values

# MongoDB Connection String (from MongoDB Atlas or local MongoDB)
MONGODB_URI=mongodb://localhost:27017/tickerpicker
# Example Atlas: mongodb+srv://username:password@cluster.mongodb.net/tickerpicker?retryWrites=true&w=majority

# JWT Secret for token signing/verification
# Generate a strong random secret for production
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Backend Port (default: 3001)
PORT=3001

